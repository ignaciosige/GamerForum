<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GamerForum{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('dist/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/all.css') }}">
        {% endblock %}

    </head>
    <body>
        {% block header %}
        <nav id="header" class="navbar navbar-expand-lg navbar-light fondoBarras">
            <a class="navbar-brand" href="{{ path('index') }}"><img src="{{asset('images/logo.png')}}" width="180" height="60" alt="..."></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('foro') }}"><span id="navForo" class="noActivo">FORO</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('noticias') }}"><span id="navNoticias" class="noActivo">NOTICIAS</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('juegos', {pagina : 1}) }}"><span id="navJuegos" class="noActivo">JUEGOS</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                    {% if is_granted('ROLE_USER') %}
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="activo"><i id="usuario" class="far fa-user"></i> {{app.user.nombreUsuario}}</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('perfil', {id: app.user.id}) }}">Perfil</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                <a class="dropdown-item" href="{{ path('usuarios')}}">Usuarios</a>
                                <a class="dropdown-item" href="{{ path('mensajes')}}">Mensajes</a>
                                {% endif %}
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar Sesi√≥n</a>
                            </div>
                        </div>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}"><span class="activo"><i id="usuario" class="far fa-user"></i> Log in</span></a>
                    {% endif %}
                        
                        
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}
        {% block body %}
        {% endblock %}
        {% block footer %}
            <footer class="fondoBarras footer mt-5 fixed-bottom">
                <div class="container p-2">
                    <div class="row">
                        <div class="col-12 col-sm-8">
                            <div class="row">
                                <div class="col-sm-4">
                                    <i class="far fa-copyright"></i> Gamer Forum<br> 2021
                                </div>
                                <div class="col-sm-8">
                                    <a id="footContacto" class="link" href="{{ path('contacto') }}"><span class="activo">Contacto<span></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="row">
                                <div class="col-sm-2">
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                </div>
                                <div class="col-sm-2">
                                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                </div>
                                <div class="col-sm-2">
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                </div>
                                <div class="col-sm-6">
                                    <a class="btn btn-primary btn-block" href="#header" style="color: white;">Subir <i class="fas fa-caret-up d-inline"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('dist/jquery/jquery-3.5.1.js') }}"></script>
            <script src="{{ asset('dist/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/nav.js') }}"></script>
        {% endblock %}
    </body>
</html>
