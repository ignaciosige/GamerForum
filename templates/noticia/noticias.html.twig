{% extends 'base.html.twig' %} 

{% block body %}
<div class="container my-2">
    {% for noticia in noticias %}
    <div class="my-2" style="width: 100">
        <div class="row">
            <div class="col-12 col-sm-6 fondo">
                <img width="300" height="250" src="{{ asset('images/'~noticia.imagen) }}" class="card-img-top" alt="...">
            </div>
            <div class="col-12 col-sm-5 fondo">
                <span class="card-body">
                    <h5 class="card-title">{{noticia.titular}}</h5>
                    <p class="card-text">{{noticia.resumen}}</p>
                    <a href="{{ path('noticia', {id: noticia.id}) }}" class="btn btn-primary">Más detalles...</a>
                </span>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="col-12 col-sm-1 fondo">
                <a href="{{ path('editarNoticia', {id: noticia.id}) }}">
                    <small>Editar</small>
                </a>
                <br>
                <a href="" data-toggle="modal" data-target="#confirmarBorrarNoticia">
                    <small>Eliminar</small>
                </a>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="modal fade" id="confirmarBorrarNoticia" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel"><i class="fas fa-exclamation-circle"></i>¡Atención!<i class="fas fa-exclamation-circle"></i></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            ¿Está seguro de que desea eliminar la noticia?
        </div>
        <div class="modal-footer">
            <a class="btn btn-secondary" data-dismiss="modal">Cancelar</a>
            <a href="{{ path('eliminarNoticia', {id: noticia.id}) }}" class="btn btn-primary">Aceptar</a>
        </div>
        </div>
    </div>
    </div>
    {% else %}
    <p>No hay noticias</p>
    {% endfor %}

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('nuevaNoticia') }}">Añadir Noticia</a>
    {% endif %}
</div>
{% endblock %}