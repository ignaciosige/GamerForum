{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-2">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                {{form_widget(form.nombre, { 'attr': {'placeholder': 'Nombre'} }) }}
            </div>
            <div class="form-group">
                {{form_widget(form.email, { 'attr': {'placeholder': 'Email'} }) }}
            </div>
            <div class="form-group">
                {{form_widget(form.telefono, { 'attr': {'placeholder': 'Telefono'} }) }}
            </div>
            <div class="form-group">
                {{form_widget(form.asunto, { 'attr': {'placeholder': 'Asunto'} }) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        {{form_widget(form.texto, { 'attr': {'placeholder': 'Escriba aqu√≠ su mensaje...'} }) }}
    </div>
    {{form_widget(form.save) }}
    {{ form_end(form) }}
</div>
{% endblock %}